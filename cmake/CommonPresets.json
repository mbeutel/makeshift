{
    "version": 7,
    "configurePresets": [
        {
            "name": "use Vcpkg",
            "hidden": true,
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },

        {
            "name": "compiler presets",
            "hidden": true,
            "environment": {
                "_CFLAGS": "$penv{CFLAGS} $env{_CFLAGS_PRESET} $env{_SANITIZE_PRESET} $env{_STDLIB_PRESET}",
                "_CXXFLAGS": "$penv{CXXFLAGS} $env{_CXXFLAGS_PRESET} $env{_SANITIZE_PRESET} $env{_STDLIB_PRESET} $env{_DEBUGCHECKS_PRESET}",
                "CFLAGS": "$env{_CFLAGS}",
                "CXXFLAGS": "$env{_CXXFLAGS}"
            }
        },

        {
            // "CI" covers AppVeyor, GitHub Actions, GitLab CI, Travis CI, and possibly others.
            "name": "CI presets",
            "hidden": true,
            "condition": {
                "type": "notEquals",
                "lhs": "$env{CI}$env{CIRCLECI}$env{TF_BUILD}",
                "rhs": ""
            }
        },

        {
            "name": "use MSVC",
            "hidden": true,
            "environment": {
                "CC": "cl",
                "CXX": "cl"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "use clang-cl",
            "hidden": true,
            "environment": {
                "CC": "clang-cl",
                "CXX": "clang-cl"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "use GCC",
            "hidden": true,
            "environment": {
                "CC": "gcc",
                "CXX": "g++"
            }
        },
        {
            "name": "use Clang",
            "hidden": true,
            "environment": {
                "CC": "clang",
                "CXX": "clang++"
            }
        },

        {
            // For MSVC, enable UTF-8 source file encoding, the highest warning level, and some additional warnings:
            // W44062: enumerator 'identifier' in a switch of enum 'enumeration' is not handled
            // W44242: 'identifier': conversion from 'type1' to 'type2', possible loss of data
            // W44254: 'operator': conversion from 'type1' to 'type2', possible loss of data
            // W44265: 'class': class has virtual functions, but destructor is not virtual
            "name": "presets for MSVC",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_CFLAGS_PRESET": "/utf-8 /permissive- /W4 /w44062 /w44242 /w44254 /w44265",
                "_CXXFLAGS_PRESET": "/utf-8 /permissive- /W4 /w44062 /w44242 /w44254 /w44265"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "ASan for MSVC",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_SANITIZE_PRESET": "/fsanitize=address"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },

        {
            "name": "presets for clang-cl",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_CFLAGS_PRESET": "/utf-8 /permissive- /W4 /w44062 /w44242 /w44254 /w44265",
                "_CXXFLAGS_PRESET": "/utf-8 /permissive- /W4 /w44062 /w44242 /w44254 /w44265"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            // On Windows, UBSan currently works with non-Debug builds only.
            "name": "UBSan for clang-cl",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_SANITIZE_PRESET": "-fsanitize=undefined -fsanitize-trap=undefined -fsanitize=implicit-integer-arithmetic-value-change"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },

        {
            // For GCC, enable the highest warning level and pedantic mode.
            "name": "presets for GCC",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_CFLAGS_PRESET": "-Wall -Wextra -pedantic",
                "_CXXFLAGS_PRESET": "-Wall -Wextra -pedantic"
            }
        },
        {
            "name": "ASan & UBSan for GCC",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_SANITIZE_PRESET": "-fsanitize=address -fsanitize=undefined -fno-omit-frame-pointer -fsanitize-undefined-trap-on-error"
            }
        },
        {
            "name": "TSan for GCC",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_SANITIZE_PRESET": "-fsanitize=thread"
            }
        },

        {
            // For Clang, enable the highest warning level and pedantic mode.
            "name": "presets for Clang",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_CFLAGS_PRESET": "-Wall -Wextra -pedantic",
                "_CXXFLAGS_PRESET": "-Wall -Wextra -pedantic"
            }
        },
        {
            "name": "ASan & UBSan for Clang",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_SANITIZE_PRESET": "-fsanitize=address -fsanitize=undefined -fno-omit-frame-pointer -fsanitize-trap=undefined -fsanitize=implicit-integer-arithmetic-value-change"
            }
        },
        {
            "name": "TSan for Clang",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_SANITIZE_PRESET": "-fsanitize=thread"
            }
        },
        {
            "name": "libstdc++ for Clang",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_STDLIB_PRESET": "-stdlib=libstdc++"
            }
        },

        {
            "name": "library debug checks for MS-STL",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_DEBUGCHECKS_PRESET": "/D_ITERATOR_DEBUG_LEVEL=1"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "library debug checks for libstdc++",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_DEBUGCHECKS_PRESET": "-D_GLIBCXX_DEBUG"
            }
        },
        {
            "name": "library debug checks for libc++",
            "hidden": true,
            "inherits": "compiler presets",
            "environment": {
                "_DEBUGCHECKS_PRESET": "-D_LIBCPP_DEBUG=1"
            }
        }
    ],
    "buildPresets": [
    ],
    "testPresets": [
        {
            "name": "defaults",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}
